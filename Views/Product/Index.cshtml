@model List<Product> 

<h1>Lista produktów</h1>

<form method="post" asp-controller="Order" asp-action="CreateOrder">
    <table>
        <thead>
            <tr>
                <th>Nazwa produktu</th>
                <th>Cena</th>
                <th>Ilość</th>
                <th>Akcja</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>
                        <!-- Pole wyboru ilości -->
                        <input type="number" name="Quantities[@product.Id]" value="1" min="1" />
                    </td>
                    <td>
                        <!-- Przycisk zamów -->
                        <button type="submit" name="ProductId" value="@product.Id">Zamów</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
