@model IEnumerable<zaliczenie.Models.CartItem>

<h2>Koszyk</h2>

@if (!Model.Any())
{
    <p>Koszyk jest pusty.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Ilość</th>
                <th>Cena</th>
                <th>Razem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                    <td>@(item.Price * item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>

    <p><strong>Suma: </strong>@Model.Sum(i => i.Price * i.Quantity)</p>
}
